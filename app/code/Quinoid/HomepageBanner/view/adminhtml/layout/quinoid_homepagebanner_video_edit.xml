<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Quinoid\HomepageBanner\Block\Adminhtml\Video\Edit" name="quinoid_homepagebanner_video_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Quinoid\HomepageBanner\Block\Adminhtml\Video\Edit\Tabs" name="quinoid_homepagebanner_video_tabs">
                <block class="Quinoid\HomepageBanner\Block\Adminhtml\Video\Edit\Tab\Video" name="quinoid_homepagebanner_video_edit_tab_video"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">video</argument>
                    <argument name="block" xsi:type="string">quinoid_homepagebanner_video_edit_tab_video</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
